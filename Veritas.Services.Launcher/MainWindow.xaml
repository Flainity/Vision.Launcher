<Window x:Class="Veritas.Services.Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Veritas.Services.Launcher"
        xmlns:view="clr-namespace:Veritas.Services.Launcher.View"
        xmlns:viewmodel="clr-namespace:Veritas.Services.Launcher.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1200" WindowStyle="None" ResizeMode="NoResize" AllowsTransparency="True" Background="Transparent" d:DataContext="{d:DesignInstance viewmodel:MainWindowViewModel}">
    
    <Border CornerRadius="9" Background="#171d25" BorderBrush="#333" BorderThickness="1" Margin="20" ClipToBounds="True">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" Opacity=".5" ShadowDepth="0"/>
        </Border.Effect>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="30px"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Border Grid.Row="1" Grid.Column="0" 
                    CornerRadius="0,0,0,9" 
                    Background="#24282f"
                    ClipToBounds="True">
                <view:SidebarView/>
            </Border>
            <view:TopBarView Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"/>
            
            <Border Grid.Row="1" Grid.Column="1" CornerRadius="0,8,8,0" Background="#222" BorderThickness="1,0,0,0" BorderBrush="#171d25">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="100"/>
                    </Grid.RowDefinitions>

                    <ContentControl Content="{Binding CurrentView}"/>
                    <ContentControl Grid.Row="1" Content="{Binding PatchView}"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
