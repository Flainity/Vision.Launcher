<UserControl x:Class="Application.Launcher.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Application.Launcher.View"
             xmlns:viewmodel="clr-namespace:Application.Launcher.ViewModel"
             xmlns:view="clr-namespace:Application.Launcher.View"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="910" Background="Transparent" d:DataContext="{d:DesignInstance viewmodel:HomeViewModel}">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../ResourceDictionary/General/Button.xaml"/>
                <ResourceDictionary Source="../ResourceDictionary/General/ProgressBar.xaml"/>
                <ResourceDictionary Source="../ResourceDictionary/General/TextBox.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <Label Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" Content="Welcome to Vision of the Past!" Foreground="White" FontWeight="Bold" FontSize="18" VerticalContentAlignment="Center" Margin="20,0"/>
        <Border Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" Margin="20,0" CornerRadius="10">
            <Border.Background>
                <ImageBrush ImageSource="../Resource/Image/DemoBanner02.jpg" Stretch="UniformToFill"/>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" Opacity=".5" ShadowDepth="0"/>
            </Border.Effect>
        </Border>
        
        <Label Grid.Column="0" Grid.Row="2" Content="Latest News" Margin="20,10,0,0" Foreground="AliceBlue" FontWeight="Bold"/>
        <ListView Background="Transparent"
                  ItemsSource="{Binding NewsItems}"
                  BorderThickness="0"
                  HorizontalContentAlignment="Stretch"
                  Padding="0"
                  Margin="20"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  Grid.Row="3"
                  Grid.Column="0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="#44FFFFFF" BorderThickness="0,0,0,1" Padding="8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Titel + Tag -->
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="{Binding Title}"
                                           FontWeight="Bold"
                                           Foreground="White"/>

                                <Border Grid.Column="1" Background="LimeGreen" CornerRadius="5">
                                    <TextBlock
                                               Text="{Binding Tag}"
                                               Foreground="White"
                                               FontWeight="Bold"
                                               Margin="8,0,8,0"
                                               VerticalAlignment="Center">
                                        <TextBlock.Effect>
                                            <DropShadowEffect BlurRadius="5" Opacity=".5" ShadowDepth="0"/>
                                        </TextBlock.Effect>
                                    </TextBlock>
                                </Border>
                            </Grid>

                            <!-- Beschreibung -->
                            <TextBlock Grid.Row="1"
                                       Text="{Binding Content}"
                                       Foreground="#CCFFFFFF"
                                       Margin="0,4,0,0"
                                       TextTrimming="CharacterEllipsis"
                                       TextWrapping="NoWrap"
                                       HorizontalAlignment="Stretch"
                                       MaxWidth="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Border}}"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
